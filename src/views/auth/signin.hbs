<div class="container p-4">
  <div class="row">

    <div class="col-md-8 mx-auto">
      <div class="card text-center">
        <div class="card-body  btn-dark btn-block">
          <h3 class="">Loguearse</h3>
          </div>
        <div class="card-body">
          <div>
            <form action="/signin" method="POST">
              <div class="md-form">
                <input type="email" name="email" required class="form-control" autofocus>
                <label for="email">¿Cuál es tu Email?</label>
              </div>
              <div class="md-form">
                <input type="password" name="password" required class="form-control">
                <label for="password">Contraseña</label>
              </div>
              <button data-aos="flip-up" class="btn bg-dark text-white btn-block">
                Login
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>