<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-body  btn-primary btn-block">
          <h3>Registrarse</h3>
        </div>
        <div class="card-body px-lg-5 pt-0" data-aos="fade-up-right">
          <form action="/signup" method="POST">
            <div class="md-form">
              <input type="text" name="fullname" required class="form-control" autofocus>
              <label for="fullname">¿Cuál es tu Nombre?</label>
            </div>
            <div class="md-form">
              <input type="text" name="username" required class="form-control">
              <label for="username">Nombre de usuario</label>
            </div>
            <div class="md-form">
              <input type="password" name="password" required class="form-control">
              <label for="password">Contraseña</label>
            </div>
            <div class="form-group">
              <button data-aos="flip-up" class="btn btn-primary btn-block">Registrarse</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>